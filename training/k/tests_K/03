create table users 
(                                          
    id   bigint primary key,               
    name varchar not null                  
);

create table orders                                        
(                                                                                   
    id         bigint primary key,                                                  
    user_id    bigint  not null,                                                    
    product    varchar not null,                                                    
    constraint fk_orders_user_id foreign key (user_id) references users (id)        
);

